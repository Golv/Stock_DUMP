on post-fs
    ## ensure correct calibration file permissions
    chown root system /persist/sensorcal.json
    chmod 0660 /persist/sensorcal.json

on post-fs-data
    mkdir /data/vendor/sensor
    chown root system /data/vendor/sensor
    chmod 0770 /data/vendor/sensor

on post-fs
    start flash-nanohub-fw

service flash-nanohub-fw /vendor/bin/nanoapp_cmd download
    oneshot
    disabled
    user root
    group system

on post-fs-data
    mkdir /data/vendor/nanohub_lock/
    chown system system /data/vendor/nanohub_lock/
    restorecon /data/vendor/nanohub_lock

on init
    # nanohub
    chown system system sys/class/nanohub/nanohub/reset
    chmod 0220 sys/class/nanohub/nanohub/reset
    chown system system /dev/nanohub
    chmod 0640 system system /dev/nanohub
    chown system system /dev/nanohub_comms
    chmod 0640 system system /dev/nanohub_comms
